@model IEnumerable<ProfileManagement.Models.User>

@{
    ViewBag.Title = "Profile Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2></h2>
        <div>
            @Html.ActionLink("Create New Profile", "Create", null, new { @class = "btn btn-success" })
            @*@Html.ActionLink("Logout", "Logout", "Account", null, new { @class = "btn btn-danger" })*@
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow">
        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>User ID</th>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Created Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.UserId</td>
                            <td>@user.Username</td>
                            <td>@user.Email</td>
                            <td>@user.CreatedDate.ToString("dd/MM/yyyy")</td>
                            <td>
                                @Html.ActionLink("Details", "Details", new { id = user.UserId }, new { @class = "btn btn-sm btn-info" })
                                @Html.ActionLink("Update", "Edit", new { id = user.UserId }, new { @class = "btn btn-sm btn-warning" })
                                @Html.ActionLink("Delete", "Delete", new { id = user.UserId }, new { @class = "btn btn-sm btn-danger" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

