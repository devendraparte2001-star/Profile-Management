@model ProfileManagement.Models.User

@{
    ViewBag.Title = "Profile Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h3 class="mb-0">Profile Details</h3>
                </div>
                <div class="card-body">
                    <dl class="row">
                        @*<dt class="col-sm-4">User ID:</dt>
            <dd class="col-sm-8">@Model.UserId</dd>*@

                        <dt class="col-sm-4">Username:</dt>
                        <dd class="col-sm-8">@Model.Username</dd>

                        <dt class="col-sm-4">Email:</dt>
                        <dd class="col-sm-8">@Model.Email</dd>

                        <dt class="col-sm-4">Created Date:</dt>
                        <dd class="col-sm-8">@Model.CreatedDate.ToString("dd/MM/yyyy HH:mm")</dd>

                        <dt class="col-sm-4">Modified Date:</dt>
                        <dd class="col-sm-8">@Model.ModifiedDate.ToString("dd/MM/yyyy HH:mm")</dd>
                    </dl>

                    <div class="d-flex gap-2 float-end">                       
                        @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-secondary" })
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
